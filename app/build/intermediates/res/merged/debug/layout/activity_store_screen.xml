<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goodluckexe.topag.StoreScreen">
    <LinearLayout
        android:id="@+id/statusbar"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ff9800">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:gravity="center">
            <TextView
                android:id="@+id/level"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pcointitleicon" />
            <TextView
                android:id="@+id/pcoins"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dogbonetitleicon" />
            <TextView
                android:id="@+id/treats"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/statusbar"
        android:background="#FFC107">

        <ImageButton
            android:src="@drawable/store_button"
            android:id="@+id/store_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="19dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/pet_selection_button"
            android:id="@+id/pet_selection_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="21dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/home_button"
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="20dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/player_stats_button"
            android:id="@+id/player_stats_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/settings_button"
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:background="#FFC107"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearPopLayout"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:id="@+id/buy_treat"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:src="@drawable/dog_bone_button"
                android:scaleType="fitCenter"
                android:background="@null"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 8"
                    android:textSize="40sp"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pcoin"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/buy_pet"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/pet_image"
                android:scaleType="fitCenter"
                android:cropToPadding="true"
                android:background="@null"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="40sp"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pcoin"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/buy_pet_slot"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:src="@drawable/pet_image_max"
                android:scaleType="fitCenter"
                android:background="@null" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="40sp"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/pcoin"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
