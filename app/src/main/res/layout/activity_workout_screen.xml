<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exercise_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goodluckexe.topag.WorkoutScreen"
    android:orientation="vertical"
    android:background="#F4F6F7">
    <LinearLayout
        android:id="@+id/statusbar"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ff9800">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:gravity="center">
            <TextView
                android:id="@+id/level"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pcointitleicon" />
            <TextView
                android:id="@+id/pcoins"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dogbonetitleicon" />
            <TextView
                android:id="@+id/treats"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:id="@+id/stop"
            android:src="@drawable/stop_button"
            android:layout_height = "125dp"
            android:layout_weight="1"
            android:layout_width = "0dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/pet"
            android:layout_height = "wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pet_image"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height = "0dp"
        android:layout_weight="0.75"
        android:id="@+id/currentSpeedTime"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="0:00:00"
            android:textColor="#000000"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="0 mph"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="end|center"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/speedbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height = "0dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:indeterminate="false"
        android:max="20"
        android:progress="12"
        />
    <LinearLayout
        android:id="@+id/speedbartext"
        android:layout_width="match_parent"
        android:layout_height = "0dp"
        android:layout_weight="0.5"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="20"
            android:textColor="#000000"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height = "0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/distanceprogress"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ruler"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ruler"
                />
            <TextView
                android:id="@+id/distancenumber"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="25dp"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/pcoinsprogress"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/pcoinimage"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:scaleType="fitCenter"
                android:src="@drawable/pcoin"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/pcoinsnumber"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="#000000"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:id="@+id/EXPprogress"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/star"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:scaleType="fitCenter"
                android:src="@drawable/star"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/EXPnumber"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="#000000"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/treatprogress"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:id="@+id/treatimage"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:scaleType="fitCenter"
                android:src="@drawable/dogbonetitleicon"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/treatnumber"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="#000000"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
