<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player_stats_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goodluckexe.topag.PlayerStatsScreen">
    <LinearLayout
        android:id="@+id/statusbar"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ff9800">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:gravity="center">
            <TextView
                android:id="@+id/level"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pcoin" />
            <TextView
                android:id="@+id/pcoins"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dog_bone_button" />
            <TextView
                android:id="@+id/treats"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/statusbar"
        android:background="#FFC107">

        <ImageButton
            android:src="@drawable/store_button"
            android:id="@+id/store_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="19dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/pet_selection_button"
            android:id="@+id/pet_selection_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="21dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/home_button"
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="20dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/player_stats_button"
            android:id="@+id/player_stats_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/settings_button"
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:background="#FFC107"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <EditText
                android:id="@+id/player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Player Name"
                android:inputType="textMultiLine"
                android:textSize="30sp"
                android:gravity="center"
                />
        </RelativeLayout>
        <Space
            android:layout_height="1dp"
            android:layout_width="match_parent"
            />
        <LinearLayout
            android:id="@+id/playerstatslist"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <RelativeLayout
                android:id="@+id/distancerow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Distance Traveled:"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/miles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="59 miles"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/timerow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Time Played:"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/hourmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 h 20 min"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pcoinsrow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/pcoinstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P-Coins:"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/numberpcoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 pcoins"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/EXProw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/EXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXP: "
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/numberEXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345/20340"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/petnumberrow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/numberofpets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Pets:"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/petnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/maxdistrow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/maxdist"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Longest Distance in One Session"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/maxdistmile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.123 miles"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/longestworkoutrow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/longestworkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longest Workout Time:"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/longestworkouttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hours 48 min"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fastestpacerow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/fastestpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fastest Speed:"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/fastestpacetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 mph"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

