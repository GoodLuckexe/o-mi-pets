<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/activity_main"
    tools:context="com.example.goodluckexe.topag.MainActivity">
    <LinearLayout
        android:id="@+id/statusbar"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ff9800">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:gravity="center">
            <TextView
                android:id="@+id/level"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/pcoin" />
            <TextView
                android:id="@+id/pcoins"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dog_bone_button" />
            <TextView
                android:id="@+id/treats"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/statusbar"
        android:background="#FFC107">

        <ImageButton
            android:src="@drawable/store_button"
            android:id="@+id/store_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="19dp"
            android:background="#FFC107"/>

        <ImageButton
            android:src="@drawable/pet_selection_button"
            android:id="@+id/pet_selection_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="21dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/home_button"
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="20dp"
            android:background="#FFC107"/>
        <ImageButton
            android:src="@drawable/player_stats_button"
            android:id="@+id/player_stats_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:background="#FFC107"/>

        <ImageButton
            android:src="@drawable/settings_button"
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:background="#FFC107"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/theTutorialLayoutStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:background="#F4F6F7">

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/pet"
            android:layout_height="250dp"
            android:layout_width="300dp"
            android:src="@drawable/pet_image"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Hunger"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Happiness"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/hunger"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="100"
                android:progress="40"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <ProgressBar
                android:id="@+id/happiness"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="100"
                android:progress="40"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Feed"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Play"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:id="@+id/mainbuttons"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <ImageButton
                android:id="@+id/feedmebutton"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/dog_bone_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                />
            <ImageButton
                android:id="@+id/startstopbutton"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/play_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_above="@+id/EXPprogress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Experience"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/EXPprogress"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:indeterminate="false"
        android:max="100"
        android:progress="60"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>




